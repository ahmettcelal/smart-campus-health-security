<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.main.map.MapFragment">

    <!-- Google Map -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pin Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPinInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Category Icon -->
            <TextView
                android:id="@+id/tvPinCategoryIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="ðŸ¥"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvPinTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bildirim BaÅŸlÄ±ÄŸÄ±"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvPinCategoryIcon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp" />

            <!-- Category Name -->
            <TextView
                android:id="@+id/tvPinCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SaÄŸlÄ±k"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintTop_toBottomOf="@+id/tvPinTitle"
                app:layout_constraintStart_toEndOf="@+id/tvPinCategoryIcon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp" />

            <!-- Created Time -->
            <TextView
                android:id="@+id/tvPinTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2 saat Ã¶nce"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                app:layout_constraintTop_toBottomOf="@+id/tvPinCategory"
                app:layout_constraintStart_toEndOf="@+id/tvPinCategoryIcon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp" />

            <!-- Detail Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPinDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_detail"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/tvPinTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="12dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>