<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="ui.main.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Profil ve Ayarlar"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" />

        <!-- User Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/labelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ad Soyad:"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Adı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/labelName"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/labelEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-posta:"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="user@mail.com"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                    app:layout_constraintStart_toEndOf="@+id/labelEmail"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/labelRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol:"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tvUserRole"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserEmail"
                    app:layout_constraintStart_toEndOf="@+id/labelRole"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/labelDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birim:"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserRole"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tvUserDepartment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bilgisayar Mühendisliği"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserRole"
                    app:layout_constraintStart_toEndOf="@+id/labelDepartment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Followed Events Section (only for users) -->
        <TextView
            android:id="@+id/tvFollowedEventsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Takip Edilen Bildirimler"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/cardUserInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFollowedEvents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:minHeight="200dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFollowedEventsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnLogout"
            android:visibility="gone"
            tools:listitem="@layout/item_event" />

        <TextView
            android:id="@+id/tvNoFollowedEvents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Takip ettiğiniz bildirim bulunmamaktadır."
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFollowedEventsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <!-- Admin Panel Button (only visible for admin) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdminPanel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Admin Paneli"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_manage"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewFollowedEvents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnLogout"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <!-- Logout Button (visible for all users) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Oturumu Kapat"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewFollowedEvents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
